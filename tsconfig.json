{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2022",

    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
